{
  "env": {
    "SKIP_ENV_VALIDATION": "true"
  },
  "installCommand": "npm install --ignore-scripts",
  "buildCommand": "npm run build",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}