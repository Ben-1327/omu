{
  "env": {
    "SKIP_ENV_VALIDATION": "true",
    "PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING": "1",
    "DISABLE_ERD": "true"
  },
  "buildCommand": "cross-env PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1 npx prisma generate --no-engine && npm run build",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}